<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="teamproject.usedmarket.repository.mybatis.ChatMapper">

    <insert id="saveMessage" useGeneratedKeys="true" keyProperty="id" parameterType="ChatMessage">
        INSERT INTO chat_message (sender, content, timestamp)
        VALUES (#{sender}, #{content}, #{timestamp})
    </insert>

    <select id="findAllMessages" resultType="ChatMessage">
        SELECT * FROM chat_message
    </select>


</mapper>